alias vi=nvim

# nav
alias dl="cd ~/downloads"
alias xx="exit"

# config shortcuts
alias src="source ~/.bashrc"
alias brc="vi ~/.bashrc"
alias vrc="vi ~/.config/nvim/init.vim"
alias aka="vi ~/.alias"

# ls / grep
alias ls="ls --color=auto"
alias l="ls -l"
alias la="ls -a"
alias lla="ls -la"
alias grep='grep --color=auto'
