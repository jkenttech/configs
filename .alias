alias vi=nvim

# nav
alias dl="cd ~/downloads"
alias xx="exit"

# dev
alias sql="sqlite3"

# config shortcuts
alias src="source ~/.bashrc"
alias brc="vi ~/.bashrc"
alias vrc="vi ~/.config/nvim/init.vim"
alias aka="vi ~/.alias"

# ls / grep
alias ls="ls --color=auto"
alias l="ls -l"
alias la="ls -a"
alias lla="ls -la"
alias grep='grep --color=auto'

# git
alias ga="git add"
alias gc="git commit -m"
alias gconf="git config"
alias gl="git log"
alias glog="git log"
alias gs="git status"
alias gstat="git status"
alias gp="git push"

